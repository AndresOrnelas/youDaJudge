<!DOCTYPE html>
<html>
<head>
	<title>Events to Score</title>
	<link href='http://fonts.googleapis.com/css?family=Julee' rel='stylesheet' type='text/css'>
</head>
<body>

<div id="friend_links"><h3 id="h3"><center><a href="users/index">Find Your Friends!</a><span class="dots">..</span>|<span class="dots">..</span><a href="users/show">List of Your Friends</a></center></h3></div>

  <h1 id="eve">Events to score</h1>
  
  <div id="evecont">
    <center>UFC 176</center>
    <br>
    <br>
    <center>

    <%= form_tag('/scores/new', method: 'post') do %>
      	<%= hidden_field_tag :fight_id, 1 %>
      	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      	<%= submit_tag("Score GSP vs. Silva", class: "myButton", id: "eventbutton") %>
    <% end %>
  </center>
</div>

<% if @score %>
<h1 id="fes">Friends' scored events</h1>
<h1 id="mes">My scored events</h1>
<div id="myscores">
  <div class="score">
  <center>GSP vs. Anderson Silva</center>
  <br>
    <table id="tab">
      <tr>
        <th>Fighter</th>
        <th>Round 1</th> 
        <th>Round 2</th>
        <th>Round 3</th>
      </tr>
      	<tr>
          <td>GSP</td>
          <td><%= @score.r1_f1 %></td>
      	  <td><%= @score.r2_f1 %></td>
      	  <td><%= @score.r3_f1 %></td>
        </tr>
        <tr>
          <td>Silva</td>
      	  <td><%= @score.r1_f2 %></td>
      	  <td><%= @score.r2_f2 %></td>
      	  <td><%= @score.r3_f2 %></td>
        </tr>
    </table>
  
  </div>
</div>

  </center>

<div id="friendscores">
  <% count = 0 %>
  <% if @output[count] != nil %>
    <% while (@output.length)/2 >= count %>
      <div class="score">
      <center>GSP vs. Anderson Silva</center> 
      <br>
      <span>Friend: <%= @output[count][0] %></span>
      <br>
      <br>
          <table class="tab">
            <tr>
              <th>Fighter</th>
              <th>Round 1</th> 
              <th>Round 2</th>
              <th>Round 3</th>
            </tr>
            <tr>
              <td>GSP</td>
              <td><%= @output[count][1][0] %></td>
              <td><%= @output[count][1][1] %></td>
              <td><%= @output[count][1][2] %></td>
            </tr>
            <tr>
              <td>Silva</td>
              <td><%= @output[count][1][3] %></td>
              <td><%= @output[count][1][4] %></td>
              <td><%= @output[count][1][5] %></td>
            </tr>
          </table>
        </div>
        <br>
        <br>
      <% count = count + 1 %>
    <% end %>
    </div>
  <% end %>
<% end %>

</body>