<h1>Users List</h1>


<div id="users">
	<% for user in @users %>
	  <div class="user">
	    <p>
	      <strong><%=h user.email %></strong>
	      <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post, :class => "addfriend" %>
	      <div class="clear"></div>
	    </p>
	  </div>
	<% end %>
</div>
